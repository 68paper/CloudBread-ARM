{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "redisName": {
      "type": "string",
      "defaultValue": "cb-redis-"
    },
    "notiNamespace": {
      "type": "string",
      "defaultValue": "cloudbreadns"
    },
    "notificationHubsName": {
      "type": "string",
      "defaultValue": "cb-noti-"
    },
    "serverName": {
      "type": "string",
      "defaultValue": "cb-server-",
      "maxLength": 63
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "cb-db-",
      "maxLength": 128
    },
    "storageAccountsName": {
      "type": "string",
      "defaultValue": "cloudbreadacc",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Storage_account_name is only lowercase and number."
      }
    },
    "sitesName_mobile": {
      "type": "string",
      "minLength": 2
    },
    "sitesName_adminweb": {
      "type": "string",
      "minLength": 2
    },
    "sitesName_web": {
      "type": "string",
      "minLength": 2
    },
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring",
      "minLength": 8,
      "metadata": {
        "description": "Contain special characters."
      }
    }
  },
  "variables": {
    "url": ".azurewebsites.net",
    "urlScm": ".scm.azurewebsites.net",
    "mobileName": "[parameters('sitesName_mobile')]",
    "webName": "[parameters('sitesName_web')]",
    "adminWebName": "[parameters('sitesName_adminweb')]",
    "mobileSiteName": "[concat(variables('mobileName'),variables('url'))]",
    "mobileScmSiteName": "[concat(variables('mobileName'),variables('urlScm'))]",
    "webSiteName": "[concat(variables('webName'),variables('url'))]",
    "webScmSiteName": "[concat(variables('webName'),variables('urlScm'))]",
    "adminWebSiteName": "[concat(variables('adminWebName'),variables('url'))]",
    "adminWebScmSiteName": "[concat(variables('adminWebName'),variables('urlScm'))]",

    "basePlanName": "cb-plan-",
    "mobilePlanName": "[concat(variables('basePlanName'),variables('mobileName'))]",
    "webPlanName": "[concat(variables('basePlanName'),variables('webName'))]",
    "adminWebPlanName": "[concat(variables('basePlanName'),variables('adminWebName'))]"
  },
  "resources": [{
    "comments": "Generalized from resource: /subscriptions/3e6494d9-d19d-41c6-bfa6-44870aecc57b/resourceGroups/jh-rg-cloudbread/providers/Microsoft.Cache/Redis/jhredis",
    "type": "Microsoft.Cache/Redis",
    "name": "[parameters('redisName')]",
    "apiVersion": "2015-08-01",
    "location": "Japan West",
    "properties": {
      "sku": {
        "name": "Standard",
        "family": "C",
        "capacity": 1
      },
      "enableNonSslPort": false,
      "redisConfiguration": {
        "maxclients": "1000",
        "maxmemory-reserved": "50",
        "maxmemory-delta": "50"
      }
    }
  }, {
    "type": "Microsoft.NotificationHubs/namespaces",
    "name": "[parameters('notiNamespace')]",
    "apiVersion": "2014-09-01",
    "location": "Japan West",
    "properties": {
      "namespaceType": "NotificationHub"
    },
    "resources": [{
      "type": "notificationHubs",
      "name": "[parameters('notificationHubsName')]",
      "apiVersion": "2014-09-01",
      "location": "Japan West",
      "properties": {
        "authorizationRules": []
      },
      "dependsOn": [
        "[resourceId('Microsoft.NotificationHubs/namespaces', parameters('notiNamespace'))]"
      ]
    }]
  }, {
    "type": "Microsoft.Sql/servers",
    "kind": "v12.0",
    "name": "[parameters('serverName')]",
    "apiVersion": "2014-04-01-preview",
    "location": "Japan West",
    "properties": {
      "administratorLogin": "[parameters('administratorLogin')]",
      "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
      "version": "12.0"
    },
    "resources": [{
      "name": "[parameters('databaseName')]",
      "type": "databases",
      "location": "Japan West",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
      ],
      "properties": {
        "edition": "Basic",
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "maxSizeBytes": "2147483648",
        "requestedServiceObjectiveName": null,
        "containmentState": 2
      }
    }, {
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
      ],
      "location": "Japan West",
      "name": "AllowAllWindowsAzureIps",
      "properties": {
        "endIpAddress": "0.0.0.0",
        "startIpAddress": "0.0.0.0"
      },
      "type": "firewallrules"
    }]
  }, {
    "type": "Microsoft.Storage/storageAccounts",
    "name": "[parameters('storageAccountsName')]",
    "apiVersion": "2015-06-15",
    "location": "japanwest",
    "properties": {
      "accountType": "Standard_LRS"
    }
  }, {
    "type": "Microsoft.Web/serverFarms",
    "sku": {
      "name": "F1",
      "tier": "Free",
      "size": "F1",
      "family": "F",
      "capacity": 0
    },
    "kind": "",
    "name": "[variables('webPlanName')]",
    "apiVersion": "2015-08-01",
    "location": "Japan West",
    "properties": {
      "name": "[variables('webPlanName')]",
      "numberOfWorkers": 1
    }
  }, {
    "type": "Microsoft.Web/serverFarms",
    "sku": {
      "name": "F1",
      "tier": "Free",
      "size": "F1",
      "family": "F",
      "capacity": 0
    },
    "kind": "",
    "name": "[variables('adminWebPlanName')]",
    "apiVersion": "2015-08-01",
    "location": "Japan West",
    "properties": {
      "name": "[variables('adminWebPlanName')]",
      "numberOfWorkers": 1
    }
  }, {
    "type": "Microsoft.Web/serverFarms",
    "sku": {
      "name": "F1",
      "tier": "Free",
      "size": "F1",
      "family": "F",
      "capacity": 0
    },
    "kind": "",
    "name": "[variables('mobilePlanName')]",
    "apiVersion": "2015-08-01",
    "location": "Japan West",
    "properties": {
      "name": "[variables('mobilePlanName')]",
      "numberOfWorkers": 1
    }
  }, {
    "type": "Microsoft.Web/sites",
    "kind": "mobileapp",
    "name": "[parameters('sitesName_mobile')]",
    "apiVersion": "2015-08-01-preview",
    "location": "Japan West",
    "properties": {
      "name": "[parameters('sitesName_mobile')]",
      "hostNames": [
        "[variables('mobileSiteName')]"
      ],
      "enabledHostNames": [
        "[variables('mobileSiteName')]",
        "[variables('mobileScmSiteName')]"
      ],
      "hostNameSslStates": [{
        "name": "[variables('mobileSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }, {
        "name": "[variables('mobileScmSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }],
      "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', variables('mobilePlanName'))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverFarms', variables('mobilePlanName'))]"
    ]
  }, {
    "type": "Microsoft.Web/sites",
    "name": "[parameters('sitesName_web')]",
    "apiVersion": "2015-08-01-preview",
    "location": "Japan West",
    "properties": {
      "name": "[parameters('sitesName_web')]",
      "hostNames": [
        "[variables('webSiteName')]"
      ],
      "enabledHostNames": [
        "[variables('webSiteName')]",
        "[variables('webScmSiteName')]"
      ],
      "hostNameSslStates": [{
        "name": "[variables('webSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }, {
        "name": "[variables('webScmSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }],
      "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', variables('webPlanName'))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverFarms', variables('webPlanName'))]"
    ]
  }, {
    "type": "Microsoft.Web/sites",
    "name": "[parameters('sitesName_adminweb')]",
    "apiVersion": "2015-08-01-preview",
    "location": "Japan West",
    "properties": {
      "name": "[parameters('sitesName_adminweb')]",
      "hostNames": [
        "[variables('adminWebSiteName')]"
      ],
      "enabledHostNames": [
        "[variables('adminWebSiteName')]",
        "[variables('adminWebScmSiteName')]"
      ],
      "hostNameSslStates": [{
        "name": "[variables('adminWebSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }, {
        "name": "[variables('adminWebScmSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }],
      "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', variables('adminWebPlanName'))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverFarms', variables('adminWebPlanName'))]"
    ]
  }]
}
